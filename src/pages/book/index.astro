---
import Layout from '../../layouts/Layout.astro';

// Manually define book documents for reliability
const bookDocs = [
  {
    slug: 'principles',
    data: {
      title: 'Vision Principles',
      description: 'Core principles of the EU Reform Vision'
    }
  },
  {
    slug: 'language',
    data: {
      title: 'Language Integration',
      description: 'English as the European lingua franca'
    }
  },
  {
    slug: 'summary',
    data: {
      title: 'Executive Summary',
      description: 'Overview of the entire EU Reform Vision'
    }
  },
  {
    slug: 'european-egovernment',
    data: {
      title: 'European eGovernment',
      description: 'Digital government infrastructure for all of Europe'
    }
  },
  {
    slug: 'unified-payment-zone',
    data: {
      title: 'Unified Payment Zone',
      description: 'Seamless financial transactions across Europe'
    }
  }
];

// Sort by title
const sortedDocs = bookDocs.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<Layout title="Vision Book">
  <div class="bg-gray-900 min-h-screen">
    <main class="container mx-auto max-w-6xl px-4 py-8">
      <div class="mb-8">
        <a href="/vision" class="text-blue-400 hover:text-blue-300 flex items-center gap-2 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Vision Overview
        </a>
        <h1 class="text-4xl md:text-5xl font-bold mb-6" style="color: var(--color-text-primary);">Vision Book</h1>
        <p class="text-xl" style="color: var(--color-text-secondary);">Detailed chapters explaining the EU Reform Vision framework for integration.</p>
      </div>
      
      <div class="relative mb-12">
        <div class="absolute inset-0 opacity-50 blur-xl transition-colors duration-300" style="background: linear-gradient(to right, var(--color-accent-primary), var(--color-accent-secondary));"></div>
        <div class="relative rounded-xl p-8 shadow-lg transition-colors duration-300" style="background-color: var(--color-bg-secondary); border: 1px solid var(--color-border);">
          <h2 class="text-2xl font-bold mb-4" style="color: var(--color-text-primary);">About This Book</h2>
          <p class="mb-6" style="color: var(--color-text-secondary);">The EU Reform Vision Book provides a comprehensive framework for European integration through technological innovation, language unity, and administrative reform. Each chapter addresses specific aspects of this vision, providing detailed proposals and implementation strategies.</p>
          
          <div class="flex flex-wrap gap-3">
            <a href="/docs/book/principles" class="px-4 py-2 rounded-lg text-sm transition-colors" style="background-color: var(--color-accent-primary); color: var(--color-bg-primary);">
              Start with Core Principles
            </a>
            <a href="/book" class="px-4 py-2 rounded-lg text-sm transition-colors" style="background-color: var(--color-bg-secondary); color: var(--color-text-primary); border: 1px solid var(--color-border);">
              View All Chapters
            </a>
          </div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedDocs.map(doc => (
          <a href={`/docs/book/${doc.slug}`} class="group">
            <div class="bg-gray-800 hover:bg-gray-700 rounded-lg p-6 transition-all duration-300 h-full border border-gray-700 hover:border-blue-600 flex flex-col">
              <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-blue-400">{doc.data.title}</h3>
              {doc.data.description && (
                <p class="text-gray-400 text-sm mb-4 flex-grow">{doc.data.description}</p>
              )}
              <div class="flex justify-between items-center mt-2">
                <span class="text-blue-400 text-sm">Read chapter</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-400 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
      
      <div class="mt-16 flex justify-between items-center">
        <a href="/vision" class="text-blue-400 hover:text-blue-300 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
          </svg>
          Vision Overview
        </a>
        
        <a href="/why" class="inline-flex items-center gap-2 bg-blue-700 hover:bg-blue-600 text-white font-medium px-4 py-2 rounded-lg transition-all">
          Why Reform EU?
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </main>
  </div>
</Layout>