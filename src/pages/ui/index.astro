---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import CardGrid from '../../components/CardGrid.astro';
import DisplayTitle from '../../components/DisplayTitle.astro';
import Hero from '../../components/Hero.astro';
import FAQ from '../../components/FAQ.astro';
import Author from '../../components/Author.astro';
import WhyDigitalReform from '../../components/WhyDigitalReform.astro';
import Testimonials from '../../components/Testimonials.astro';
import InteractiveSection from '../../components/InteractiveSection.astro';
import EuropeMap from '../../components/EuropeMap.astro';
import EUStatisticsChart from '../../components/EUStatisticsChart.astro';
import Timeline from '../../components/Timeline.astro';

// Sample data for examples
const cardColors = ["blue", "indigo", "green", "yellow", "red", "purple", "teal"];

const sampleChartData = [
  { label: 'Category A', value: 65, color: 'rgba(75, 192, 192, 0.8)' },
  { label: 'Category B', value: 45, color: 'rgba(54, 162, 235, 0.8)' },
  { label: 'Category C', value: 85, color: 'rgba(153, 102, 255, 0.8)' },
  { label: 'Category D', value: 30, color: 'rgba(255, 159, 64, 0.8)' }
];

const faqItems = [
  {
    question: "Sample Question 1?",
    answer: "This is a sample answer to demonstrate the FAQ component functionality."
  },
  {
    question: "Sample Question 2?",
    answer: "Another example answer with <strong>HTML formatting</strong> and <a href='#'>links</a>."
  }
];
---

<Layout title="UI Components Library">
  <div class="container mx-auto px-4 py-8">
    <div class="border-b border-gray-700 pb-4 mb-12">
      <h1 class="text-4xl font-bold text-white mb-2">UI Components Library</h1>
      <p class="text-gray-300">This page showcases all available UI components for reference and development purposes.</p>
      <p class="text-gray-500 text-sm mt-2">Note: This page is only visible in development mode.</p>
      <div class="bg-green-900/30 border border-green-700/50 rounded-lg p-4 mt-4">
        <p class="text-green-300 font-medium">💡 The <strong>Ready-to-Use Page Sections</strong> at the top of this page contain complete, pre-built sections that can be easily added to any page on the site.</p>
      </div>
    </div>

    <!-- Table of Contents -->
    <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6 mb-12">
      <h2 class="text-2xl font-bold text-white mb-4">Contents</h2>
      <ul class="list-disc list-inside text-gray-300 space-y-1">
        <li><a href="#ready-sections" class="text-green-400 hover:text-green-300 font-bold">🌟 Ready-to-Use Page Sections</a></li>
        <li><a href="#testimonials-section" class="text-green-400 hover:text-green-300 ml-6">Expert Insights Section</a></li>
        <li><a href="#interactive-insights" class="text-green-400 hover:text-green-300 ml-6">Interactive Data Insights Section</a></li>
        <li><a href="#faq-section" class="text-green-400 hover:text-green-300 ml-6">FAQ Section</a></li>
        <li class="mt-3"><a href="#typography" class="text-blue-400 hover:text-blue-300">Typography</a></li>
        <li><a href="#buttons" class="text-blue-400 hover:text-blue-300">Buttons</a></li>
        <li><a href="#cards" class="text-blue-400 hover:text-blue-300">Cards</a></li>
        <li><a href="#grids" class="text-blue-400 hover:text-blue-300">Card Grids</a></li>
        <li><a href="#hero" class="text-blue-400 hover:text-blue-300">Hero Section</a></li>
        <li><a href="#faq" class="text-blue-400 hover:text-blue-300">FAQ Component</a></li>
        <li><a href="#author" class="text-blue-400 hover:text-blue-300">Author Profile</a></li>
        <li><a href="#whyreform" class="text-blue-400 hover:text-blue-300">Why Digital Reform</a></li>
        <li><a href="#testimonials" class="text-blue-400 hover:text-blue-300">Testimonials</a></li>
        <li><a href="#interactive" class="text-blue-400 hover:text-blue-300">Interactive Elements</a>
          <ul class="ml-6 mt-1 list-disc list-inside">
            <li><a href="#maps" class="text-blue-400 hover:text-blue-300">Maps</a></li>
            <li><a href="#charts" class="text-blue-400 hover:text-blue-300">Charts</a></li>
            <li><a href="#timeline" class="text-blue-400 hover:text-blue-300">Timeline</a></li>
          </ul>
        </li>
      </ul>
    </div>

    <!-- Ready-to-Use Sections -->
    <section id="ready-sections" class="mb-16">
      <DisplayTitle level={1}>🌟 Ready-to-Use Page Sections</DisplayTitle>
      
      <div class="bg-green-900/30 border border-green-700/50 rounded-xl p-6 mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">How to Use These Sections</h2>
        
        <p class="text-gray-300 mb-4">These complete, pre-built sections are ready to be added to any page. Unlike individual components, these sections combine multiple components into fully functional page segments that can be copied as-is.</p>
        
        <div class="bg-gray-800/50 p-4 rounded-lg mb-4">
          <pre class="text-gray-300 overflow-auto"><code>{`// In your page's frontmatter
import InteractiveSection from '../components/InteractiveSection.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';

// In your page body
<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-16">
  <DisplayTitle level={1}>Section Title</DisplayTitle>
  
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-purple-900 opacity-10 blur-xl"></div>
    <div class="relative">
      <!-- Insert component here -->
    </div>
  </div>
</div>`}</code></pre>
        </div>
      </div>
      
      <!-- Expert Insights Section -->
      <section id="testimonials-section" class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-2">Expert Insights Section</h2>
        
        <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6 mb-6">
          <DisplayTitle level={3}>Expert Insights</DisplayTitle>
          
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-purple-900 to-blue-900 opacity-10 blur-xl"></div>
            <div class="relative">
              <Testimonials 
                color="purple"
                items={[
                  {
                    quote: "The EU's administrative fragmentation is a critical weakness in the digital age. This vision's emphasis on unified digital infrastructure and a common language could transform Europe into a true economic powerhouse, removing the hidden tax of complexity that currently hampers innovation.",
                    author: "Prof. Anna Kowalska",
                    title: "Professor of Digital Economics",
                    organization: "Technical University of Warsaw"
                  },
                  {
                    quote: "As someone who's worked on cross-border EU projects for decades, I can attest that language barriers remain the single biggest obstacle to European integration. Making English an official second language everywhere would be transformative for collaboration and mobility.",
                    author: "Dr. Marco Rossi",
                    title: "Former EU Commissioner for Education",
                    organization: "European Institute for Innovation"
                  },
                  {
                    quote: "The vision's focus on robotic reindustrialization represents the most viable path for Europe to maintain manufacturing competitiveness while addressing demographic challenges. This is particularly crucial for Eastern European economies.",
                    author: "Dr. Elisa Schmidt",
                    title: "Director of Robotics Research",
                    organization: "German Institute for Automation"
                  },
                  {
                    quote: "What makes this approach unique is how it leverages economies of scale across the entire Union. Building shared digital systems would save billions in redundant development costs while delivering better services to citizens.",
                    author: "Jean-Michel Dupont",
                    title: "Chief Digital Officer",
                    organization: "French Ministry of Economy"
                  }
                ]}
              />
            </div>
          </div>
          
          <div class="bg-gray-800/50 p-4 rounded-lg mt-8">
            <p class="text-gray-400 mb-2">Usage example:</p>
            <pre class="text-gray-300 overflow-auto"><code>{`<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-16">
  <DisplayTitle level={1}>Expert Insights</DisplayTitle>
  
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-900 to-blue-900 opacity-10 blur-xl"></div>
    <div class="relative">
      <Testimonials 
        color="purple"
        items={[
          {
            quote: "Quote text here...",
            author: "Author Name",
            title: "Author Title",
            organization: "Organization Name"
          },
          // More testimonials...
        ]}
      />
    </div>
  </div>
</div>`}</code></pre>
          </div>
        </div>
      </section>
      
      <!-- Interactive Data Insights Section -->
      <section id="interactive-insights" class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-2">Interactive Data Insights Section</h2>
        
        <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6 mb-6">
          <DisplayTitle level={3}>Interactive Data Insights</DisplayTitle>
          
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-green-900 opacity-10 blur-xl"></div>
            <div class="relative">
              <InteractiveSection color="blue" />
            </div>
          </div>
          
          <div class="bg-gray-800/50 p-4 rounded-lg mt-8">
            <p class="text-gray-400 mb-2">Usage example:</p>
            <pre class="text-gray-300 overflow-auto"><code>{`<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-16">
  <DisplayTitle level={1}>Interactive Data Insights</DisplayTitle>
  
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-green-900 opacity-10 blur-xl"></div>
    <div class="relative">
      <InteractiveSection color="blue" />
    </div>
  </div>
</div>`}</code></pre>
          </div>
        </div>
      </section>
      
      <!-- FAQ Section -->
      <section id="faq-section" class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-700 pb-2">FAQ Section</h2>
        
        <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6 mb-6">
          <DisplayTitle level={3}>Common Questions</DisplayTitle>
          
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-purple-900 to-indigo-900 opacity-10 blur-xl"></div>
            <div class="relative">
              <FAQ 
                color="indigo"
                items={[
                  {
                    question: "Why do we need yet another European integration project?",
                    answer: "Unlike previous integration efforts, this vision focuses on practical, tangible benefits for all Europeans rather than abstract political concepts. By focusing on language, digital infrastructure, and robotic reindustrialization, we address the actual challenges facing Europe in an era of global competition and technological change."
                  },
                  {
                    question: "Isn't English as a second language unfair to non-English speaking countries?",
                    answer: "This proposal recognizes that English is already the de facto international language of business, science, and technology. Rather than starting from zero with a new language, we're acknowledging reality and formalizing it to reduce barriers. National languages remain primary, with English as a practical addition that enables greater European-wide communication and opportunity."
                  },
                  {
                    question: "How will these changes benefit ordinary citizens?",
                    answer: "Citizens will gain access to streamlined public services in multiple languages, enjoy faster cross-border shipping, benefit from enhanced AI-powered healthcare, access lifetime educational opportunities, and experience greater job mobility throughout Europe. The vision aims to create a Europe where everyday life becomes simpler, more efficient, and more prosperous for all."
                  },
                  {
                    question: "What if Germany or other powerful countries don't agree?",
                    answer: "If certain countries choose not to participate initially, this vision could begin as an Intermarium 2.0 project with countries like Poland, Ukraine, Romania, and Scandinavian nations. The benefits of integration would likely become apparent quickly, encouraging others to join. The proposal creates such clear mutual advantages that even skeptical countries would have strong incentives to participate."
                  }
                ]}
              />
            </div>
          </div>
          
          <div class="bg-gray-800/50 p-4 rounded-lg mt-8">
            <p class="text-gray-400 mb-2">Usage example:</p>
            <pre class="text-gray-300 overflow-auto"><code>{`<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-16">
  <DisplayTitle level={1}>Common Questions</DisplayTitle>
  
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-900 to-indigo-900 opacity-10 blur-xl"></div>
    <div class="relative">
      <FAQ 
        color="indigo"
        items={[
          {
            question: "Question text?",
            answer: "Answer text here..."
          },
          // More questions...
        ]}
      />
    </div>
  </div>
</div>`}</code></pre>
          </div>
        </div>
      </section>
    </section>
    
    <!-- Typography Section -->
    <section id="typography" class="mb-16">
      <DisplayTitle level={1}>Typography</DisplayTitle>
      
      <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6 mb-8">
        <h2 class="text-3xl font-bold text-white mb-8">Heading Examples</h2>
        
        <div class="space-y-6">
          <div>
            <h1 class="text-4xl font-bold text-white mb-2">Heading 1 (text-4xl)</h1>
            <div class="text-gray-500 text-sm">Used for main page titles</div>
          </div>
          
          <div>
            <h2 class="text-3xl font-bold text-white mb-2">Heading 2 (text-3xl)</h2>
            <div class="text-gray-500 text-sm">Used for section headings</div>
          </div>
          
          <div>
            <h3 class="text-2xl font-bold text-white mb-2">Heading 3 (text-2xl)</h3>
            <div class="text-gray-500 text-sm">Used for subsection headings</div>
          </div>
          
          <div>
            <h4 class="text-xl font-bold text-white mb-2">Heading 4 (text-xl)</h4>
            <div class="text-gray-500 text-sm">Used for card titles and small sections</div>
          </div>
          
          <div>
            <h5 class="text-lg font-bold text-white mb-2">Heading 5 (text-lg)</h5>
            <div class="text-gray-500 text-sm">Used for minor headings</div>
          </div>
        </div>
      </div>
      
      <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6 mb-8">
        <h2 class="text-3xl font-bold text-white mb-8">Text Examples</h2>
        
        <div class="space-y-6">
          <div>
            <p class="text-gray-300 text-lg mb-2">Body Text Large (text-lg)</p>
            <div class="text-gray-500 text-sm">Used for important paragraphs and introductions</div>
          </div>
          
          <div>
            <p class="text-gray-300 mb-2">Body Text Regular</p>
            <div class="text-gray-500 text-sm">Default text style for paragraphs</div>
          </div>
          
          <div>
            <p class="text-gray-400 text-sm mb-2">Small Text (text-sm)</p>
            <div class="text-gray-500 text-sm">Used for secondary information, captions</div>
          </div>
          
          <div>
            <p class="text-gray-300 mb-2">Text with <span class="font-bold">bold</span>, <span class="italic">italic</span>, and <span class="underline">underline</span> formatting</p>
          </div>
          
          <div>
            <p class="text-gray-300 mb-2">Text with <a href="#" class="text-blue-400 hover:text-blue-300">link styling</a></p>
          </div>
        </div>
      </div>

      <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6">
        <h2 class="text-3xl font-bold text-white mb-8">List Examples</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Unordered List</h3>
            <ul class="list-disc list-inside text-gray-300 space-y-2">
              <li>First list item</li>
              <li>Second list item with <a href="#" class="text-blue-400 hover:text-blue-300">a link</a></li>
              <li>Third list item
                <ul class="list-circle list-inside ml-6 mt-2 space-y-2">
                  <li>Nested list item</li>
                  <li>Another nested item</li>
                </ul>
              </li>
              <li>Fourth list item</li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Ordered List</h3>
            <ol class="list-decimal list-inside text-gray-300 space-y-2">
              <li>First ordered item</li>
              <li>Second ordered item</li>
              <li>Third ordered item
                <ol class="list-decimal list-inside ml-6 mt-2 space-y-2">
                  <li>Nested ordered item</li>
                  <li>Another nested ordered item</li>
                </ol>
              </li>
              <li>Fourth ordered item</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- Buttons Section -->
    <section id="buttons" class="mb-16">
      <DisplayTitle level={1}>Buttons</DisplayTitle>
      
      <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6">
        <h2 class="text-3xl font-bold text-white mb-8">Button Styles</h2>
        
        <div class="space-y-8">
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Primary Buttons</h3>
            <div class="flex flex-wrap gap-4">
              <button class="px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-colors duration-300">
                Primary Button
              </button>
              <button class="px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-medium rounded-lg transition-colors duration-300">
                Indigo Variant
              </button>
              <button class="px-6 py-3 bg-green-600 hover:bg-green-500 text-white font-medium rounded-lg transition-colors duration-300">
                Green Variant
              </button>
              <button disabled class="px-6 py-3 bg-blue-600 opacity-50 cursor-not-allowed text-white font-medium rounded-lg">
                Disabled
              </button>
            </div>
          </div>
          
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Secondary Buttons</h3>
            <div class="flex flex-wrap gap-4">
              <button class="px-6 py-3 bg-transparent border border-blue-500 hover:bg-blue-500/20 text-blue-400 font-medium rounded-lg transition-colors duration-300">
                Secondary Button
              </button>
              <button class="px-6 py-3 bg-transparent border border-indigo-500 hover:bg-indigo-500/20 text-indigo-400 font-medium rounded-lg transition-colors duration-300">
                Indigo Variant
              </button>
              <button class="px-6 py-3 bg-transparent border border-green-500 hover:bg-green-500/20 text-green-400 font-medium rounded-lg transition-colors duration-300">
                Green Variant
              </button>
              <button disabled class="px-6 py-3 bg-transparent border border-blue-500 opacity-50 cursor-not-allowed text-blue-400 font-medium rounded-lg">
                Disabled
              </button>
            </div>
          </div>
          
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Button Sizes</h3>
            <div class="flex flex-wrap items-center gap-4">
              <button class="px-5 py-2 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium rounded-lg transition-colors duration-300">
                Small
              </button>
              <button class="px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-colors duration-300">
                Medium (Default)
              </button>
              <button class="px-8 py-4 bg-blue-600 hover:bg-blue-500 text-white text-lg font-medium rounded-lg transition-colors duration-300">
                Large
              </button>
            </div>
          </div>
          
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Button with Icon</h3>
            <div class="flex flex-wrap gap-4">
              <button class="px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-colors duration-300 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                </svg>
                Next Step
              </button>
              <button class="px-6 py-3 bg-green-600 hover:bg-green-500 text-white font-medium rounded-lg transition-colors duration-300 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Add New
              </button>
              <button class="px-6 py-3 bg-transparent border border-blue-500 hover:bg-blue-500/20 text-blue-400 font-medium rounded-lg transition-colors duration-300 flex items-center gap-2">
                Download
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cards Section -->
    <section id="cards" class="mb-16">
      <DisplayTitle level={1}>Cards</DisplayTitle>
      
      <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6">
        <h2 class="text-3xl font-bold text-white mb-8">Card Component Examples</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          {cardColors.map((color, index) => (
            <Card title={`${color.charAt(0).toUpperCase() + color.slice(1)} Card`} color={color} icon={["🚀", "💡", "🔧", "📊", "🔍", "⚙️", "📱"][index]}>
              <p>This is an example of a card with {color} styling. Cards are used throughout the site to display content in organized sections.</p>
            </Card>
          ))}
        </div>
        
        <h3 class="text-2xl font-bold text-white mb-4">Card Component Usage</h3>
        <div class="bg-gray-800/50 p-4 rounded-lg mb-4">
          <pre class="text-gray-300 overflow-auto"><code>{`<Card title="Card Title" color="blue" icon="🚀">
  <p>Card content goes here.</p>
</Card>`}</code></pre>
        </div>
        <p class="text-gray-300 mb-2">Available colors: blue, indigo, green, yellow, red, purple, teal</p>
      </div>
    </section>

    <!-- Card Grids Section -->
    <section id="grids" class="mb-16">
      <DisplayTitle level={1}>Card Grids</DisplayTitle>
      
      <div class="bg-gray-900/30 border border-gray-700/50 rounded-lg p-6">
        <h2 class="text-3xl font-bold text-white mb-8">CardGrid Component Examples</h2>
        
        <h3 class="text-2xl font-bold text-white mb-4">2-Column Grid</h3>
        <CardGrid columns={2} gap="2rem">
          <Card title="Card One" color="blue" icon="📘">
            <p>This is the first card in a 2-column grid layout.</p>
          </Card>
          <Card title="Card Two" color="indigo" icon="📗">
            <p>This is the second card in a 2-column grid layout.</p>
          </Card>
          <Card title="Card Three" color="teal" icon="📙">
            <p>This is the third card in a 2-column grid layout.</p>
          </Card>
          <Card title="Card Four" color="green" icon="📕">
            <p>This is the fourth card in a 2-column grid layout.</p>
          </Card>
        </CardGrid>
        
        <h3 class="text-2xl font-bold text-white mt-12 mb-4">3-Column Grid</h3>
        <CardGrid columns={3} gap="1.5rem">
          <Card title="Card One" color="purple" icon="🧠">
            <p>This is the first card in a 3-column grid layout.</p>
          </Card>
          <Card title="Card Two" color="red" icon="❤️">
            <p>This is the second card in a 3-column grid layout.</p>
          </Card>
          <Card title="Card Three" color="yellow" icon="⭐">
            <p>This is the third card in a 3-column grid layout.</p>
          </Card>
        </CardGrid>
        
        <h3 class="text-2xl font-bold text-white mt-12 mb-4">CardGrid Usage</h3>
        <div class="bg-gray-800/50 p-4 rounded-lg mb-4">
          <pre class="text-gray-300 overflow-auto"><code>{`<CardGrid columns={2} gap="2rem">
  <Card title="Card One" color="blue" icon="📘">
    <p>Card content here.</p>
  </Card>
  <Card title="Card Two" color="indigo" icon="📗">
    <p>More card content here.</p>
  </Card>
