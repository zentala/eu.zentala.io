---
interface Props {
  color?: string;
}

const { color = "blue" } = Astro.props;

// Dynamically determine background color
let bgColorClass = "bg-gray-800/30";
let borderColorClass = "border-gray-700/50";
let accentClass = "text-blue-400";

if (color === "blue") {
  bgColorClass = "bg-blue-900/30";
  borderColorClass = "border-blue-700/50";
  accentClass = "text-blue-400";
} else if (color === "indigo") {
  bgColorClass = "bg-indigo-900/30";
  borderColorClass = "border-indigo-700/50";
  accentClass = "text-indigo-400";
} else if (color === "teal") {
  bgColorClass = "bg-teal-900/30";
  borderColorClass = "border-teal-700/50";
  accentClass = "text-teal-400";
}
---

<div class={`why-reform-container ${bgColorClass} border ${borderColorClass} rounded-xl p-8 shadow-lg`}>
  <!-- Interactive timeline/steps layout -->
  <div class="relative">
    <!-- Vertical connection line for desktop -->
    <div class="hidden md:block absolute left-[2.5rem] top-12 bottom-12 w-1 bg-gradient-to-b from-teal-500/80 to-blue-500/80 rounded-full"></div>
    
    <!-- Reason 1 -->
    <div class="mb-12 md:mb-16 flex flex-col md:flex-row gap-4 md:gap-8 relative">
