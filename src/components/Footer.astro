---
import { Image } from 'astro:assets';
import EuLogo from '../assets/eu.png';

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Vision",
    links: [
      { text: "Overview", href: "/vision" },
      { text: "Core Principles", href: "/docs/book/principles" },
      { text: "Language Integration", href: "/vision/language-integration" },
      { text: "Digital Integration", href: "/vision/digital-integration" },
      { text: "Robotic Future", href: "/vision/robotic-reindustrialization" },
    ]
  },
  {
    title: "Topics",
    links: [
      { text: "Blockchain State", href: "/docs/ideas/governance/blockchain-state" },
      { text: "Autonomous Logistics", href: "/docs/ideas/transportation/autonomous-transportation" },
      { text: "European Healthcare", href: "/docs/book/predictive-healthcare-system" },
      { text: "Financial Reforms", href: "/docs/ideas/finance/european-cryptocurrency" },
    ]
  },
  {
    title: "Resources",
    links: [
      { text: "Why Reform?", href: "/why" },
      { text: "Vision Book", href: "/book" },
      { text: "Benefits For You", href: "/for-you" },
      { text: "Sitemap", href: "/sitemap.xml" },
    ]
  }
];
---

<footer class="bg-gray-900 border-t border-gray-800 mt-16">
  <div class="container mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-10">
      <!-- Logo and description -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-3 mb-6">
          <Image src={EuLogo} alt="EU Reform Vision" width={40} height={40} class="rounded-full" />
          <span class="text-xl font-semibold text-white tracking-tight">EU Reform <span class="text-blue-400">Vision</span></span>
        </div>
        <p class="text-gray-300 text-lg pr-4">
          A comprehensive vision for European integration through technological innovation, language unity, and administrative reform.
        </p>
        <div class="mt-6">
          <p class="text-gray-400">
            This vision was created by <a href="https://zentala.io" class="text-blue-400 hover:underline">Paweł Żentała</a>, a Polish software engineer and European policy enthusiast.
          </p>
        </div>
      </div>
      
      <!-- Footer links -->
      {footerLinks.map(section => (
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">{section.title}</h3>
          <ul class="space-y-3">
            {section.links.map(link => (
              <li>
                <a href={link.href} class="text-gray-400 hover:text-blue-400 transition-colors">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="border-t border-gray-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400">
        &copy; {currentYear} EU Reform Vision. All rights reserved.
      </p>
      <div class="mt-4 md:mt-0 flex items-center space-x-6">
        <a href="/why" class="text-gray-400 hover:text-blue-400">Why Reform?</a>
        <a href="/tags" class="text-gray-400 hover:text-blue-400">Tags</a>
        <a href="/privacy" class="text-gray-400 hover:text-blue-400">Privacy</a>
        <a href="/terms" class="text-gray-400 hover:text-blue-400">Terms</a>
        <a href="/ui" id="ui-link" class="hidden text-gray-500 hover:text-blue-400">UI Components</a>
      </div>
    </div>
    
    <script>
      // Show UI link only in development mode
      document.addEventListener('DOMContentLoaded', () => {
        const isDevelopment = 
          window.location.hostname === 'localhost' || 
          window.location.hostname.includes('127.0.0.1') ||
          window.location.hostname.includes('.local');
        
        const uiLink = document.getElementById('ui-link');
        if (uiLink && isDevelopment) {
          uiLink.classList.remove('hidden');
        }
      });
    </script>
  </div>
</footer>
