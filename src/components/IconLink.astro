---
// IconLink.astro - A reusable component for creating links with icons

interface Props {
  href: string;
  icon: string; // FontAwesome class name (e.g., "fa-solid fa-arrow-right")
  iconPosition?: 'left' | 'right';
  class?: string;
  ariaLabel?: string;
  target?: string;
}

const {
  href,
  icon,
  iconPosition = 'left',
  class: className = '',
  ariaLabel,
  target,
} = Astro.props;

// Base classes
let classes = "inline-flex items-center gap-2 transition-colors duration-200";

// Apply custom classes
classes = `${classes} ${className}`;
---

<a
  href={href}
  class={classes}
  aria-label={ariaLabel}
  target={target}
  rel={target === '_blank' ? 'noopener noreferrer' : undefined}
>
  {iconPosition === 'left' && (
    <i class={icon}></i>
  )}
  
  <span><slot /></span>
  
  {iconPosition === 'right' && (
    <i class={icon}></i>
  )}
</a>