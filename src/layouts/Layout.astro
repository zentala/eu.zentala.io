---
import '../styles/global.scss'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A comprehensive vision for European integration through technology, language, and infrastructure" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <script
      src="https://kit.fontawesome.com/71aeb2a21d.js"
      crossorigin="anonymous"
      is:inline></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title} | EU Reform Vision</title>
  </head>
  <body class="bg-gray-900 text-white min-h-screen">
    <div class="bg-gradient-to-b from-blue-950 to-gray-900 fixed inset-0 z-[-1] opacity-50"></div>
    <Header />
    <div class="py-6 px-4 sm:px-6 lg:px-8">
      <slot />
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: 'Inter', sans-serif;
    scroll-behavior: smooth;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }
  
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1a202c;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #2d3748;
    border-radius: 6px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #4a5568;
  }
</style>